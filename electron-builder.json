{
  "appId": "com.quran.videoeditor",
  "productName": "Quran Video Editor",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "public/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "public/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
